version: 1
task_definition:
  ecs_network_mode: awsvpc
  task_role_arn: ${XRay_TASK_ROLE_ARN}
  task_execution_role: ${XRay_TASK_EXECUTION_ROLE_ARN}
  task_size:
    cpu_limit: 256
    mem_limit: 512
  services:
    service-b:
      essential: true
run_params:
  network_configuration:
    awsvpc_configuration:
      subnets:
        - ${XRay_SUBNET_ID_1}
        - ${XRay_SUBNET_ID_2}
      security_groups:
        - ${XRay_SG_ID}
      assign_public_ip: ENABLED
